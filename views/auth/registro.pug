extends ../layout/index

block contenido
    .flex.justify-center.items-center.min-h-screen.bg-gradient-to-br.from-blue-50.to-blue-100
        .container.bg-white.rounded-lg.shadow-lg.max-w-4xl.grid.grid-cols-2.overflow-hidden
            // Columna izquierda: Formulario
            .p-10
                // Mensajes de error globales
                if errores
                    div(class="max-w-md mx-auto my-10 space-y-2")
                        each error in errores
                            p(class="animate-fade-out bg-red-100 text-red-700 border border-red-300 rounded-md px-3 py-2 mb-1 font-bold text-sm shadow-md flex items-center")
                                span(class="mr-2")= error.msg

                h1.text-4xl.my-10.font-extrabold.text-center.text-sesniprymary Bienes
                 spam.font-normal Raices 
                p.text-gray-600.text-center.mb-6 Llene los campos con la informacion solicitada

                form(method="POST" action="/auth/registro" noValidate).space-y-4
                
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    input(type="hidden" name="usuarioId" value=usuarioId)
             
                    div
                        label.block.text-sm.text-gray-600(for="name") Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="Ingresa tu nombre" type="text" name="nombre" required)
                    

                    div
                        label.block.text-sm.text-gray-600(for="email") Correo Electronico
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="Ingresa tu correo electronico" type="email" name="email" required)
                        if error_email
                            p.text-sm.text-red-500.mt-1 #{error_email}

                    div
                        label.block.text-sm.text-gray-600(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="Ingresa una contraseña" type="password" name="password" required)
                        if error_password
                            p.text-sm.text-red-500.mt-1 #{error_password}
                            
                    div
                        label.block.text-sm.text-gray-600(for="password") Confirmar Contraseña
                        input#repetpassword.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="Repite tu contraseña" type="password" name="repetpassword" required)
                        if error_repetpassword
                            p.text-sm.text-red-500.mt-1 #{error_repetpassword}
                    div
                        label.block.text-sm.text-gray-600(for="fechaNacimiento") Fecha de Nacimiento
                        input#fechaNacimiento.w-full.px-3.py-2.border.border-gray-300.rounded-md(placeholder="Ingresa tu fecha de nacimiento" type="date" name="fechaNacimiento" required)
                        if error_fechaNacimiento
                            p.text-sm.text-red-500.mt-1 #{error_fechaNacimiento}



                    button(type="submit" class="w-full bg-sesniprymary hover:bg-sesnisecondary text-white font-bold py-2 rounded-md") Register
                
                p.text-center.text-sm.text-gray-600.mt-4 ¿Ya tienes cuenta?
                 a(class="text-sesniprymary font-semibold hover:underline" href="/auth/login") Inicia Sesion


            // Columna derecha: Imagen
            .bg-blue-50.flex.items-center.justify-center.p-6
                <a href="https://imgbb.com/"><img src="https://i.ibb.co/KXWV944/icon.png" alt="Logo" border="0" class="w-3/4 h-auto"></a>
