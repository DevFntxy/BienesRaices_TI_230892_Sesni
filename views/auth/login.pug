extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-sesniprymary Bienes
            spam.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold=  pagina
    
    if errores
      div(class="max-w-md mx-auto my-10 space-y-2")
          each error in errores
             p(class="animate-fade-out bg-red-100 text-red-700 border border-red-300 rounded-md px-3 py-2 mb-1 font-bold text-sm shadow-md flex items-center")
                span(class="mr-2")= error.msg
    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow 
        form(method="POST" action="/auth/login").space-y-5.px-6
            input(type="hidden" name="_csrf" value= csrfToken) 
            div
              label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Correo:
              input#email.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu correo" type ="email"  name="email")
            div
              label.block.text-sm.uppercase.text-gray-600.mb-2.font-nold Contraseña: 
              input#password.w-full.px-2.py-2.border.border-gray-600.rounded-md.placeholder-gray-400(placeholder="Ingresa tu contraseña" type ="password" name="password")
            .flex.items-center.justify-between
              a.text-grav-500.text-xs(href="/auth/olvide-password" class="hover:underline hover:decoration-2 hover:decoration-sesnitercery") Olvide mi contraseaña...
              a.text-grav-500.text-xs(href="/auth/registro" class="hover:underline hover:decoration-2 hover:decoration-sesnitercery") No tienes cuenta?... crea una cuenta
            
            input(class="w-full bg-sesniprymary-700 hover:bg-sesnitercery text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Inicia Sesion")
